@using DTOLayer.DTOs.AnnouncemenetDTOs
@model AnnouncemenetUpdateDto
@{
    ViewData["Title"] = "UpdateAnnouncemenet";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Duyuru güncelleme sayfası</h1>

<form method="post">
    <input type="hidden" asp-for="AnnouncemenetID" />
    <label>Duyuru Başlığı</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <label>Duyuru İçeriği</label>
    <input type="text" asp-for="Content" class="form-control" />
    <br />
    <button class="btn btn-outline-primary">Duyuruyu Güncelle</button>
</form>